<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DeepWork.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DeepWork"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="31"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Spacing="5" Margin="5">
			<ImageIcon Source="ms-appx:///Assets/StoreLogo.scale-400.png" Width="20" Height="20"/>
			<TextBlock Text="Deep Work"/>
		</StackPanel>
		<Frame x:Name="ContentFrame" Grid.Row="1"/>
	</Grid>
</Window>

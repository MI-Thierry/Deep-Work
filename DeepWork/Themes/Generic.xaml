<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:uc="using:DeepWork.UserControls">

	<Style TargetType="uc:SelectableDisplay">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="uc:SelectableDisplay">
					<Grid>
						<Button x:Name="Display" Content="{TemplateBinding Content}" Background="Transparent" BorderThickness="0" Padding="{TemplateBinding Padding}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" FontWeight="{TemplateBinding FontWeight}" FontSize="{TemplateBinding FontSize}"/>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="DisplayStates">
								<VisualState x:Name="Unselected"/>
								<VisualState x:Name="Selected">
									<VisualState.Setters>
										<Setter Target="Display.Background" Value="{StaticResource ControlFillColorDefaultBrush}"/>
										<Setter Target="Display.BorderThickness" Value="1"/>
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
